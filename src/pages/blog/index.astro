---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Blog â€” ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			.blog-header {
				margin-bottom: 2rem;
			}
			.blog-header h1 {
				font-size: 2em;
				margin-bottom: 0.25em;
			}
			.blog-header p {
				color: rgb(var(--gray));
				margin: 0;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
			}
			ul li:first-child img {
				width: 100%;
				height: 360px;
			}
			ul li:first-child .title {
				font-size: 1.8rem;
			}
			ul li img {
				width: 100%;
				height: 200px;
				object-fit: cover;
				object-position: center;
				margin-bottom: 0.75rem;
				border-radius: 10px;
				display: block;
			}
			ul li a {
				display: block;
				text-decoration: none;
			}
			.title {
				margin: 0 0 0.25em 0;
				color: rgb(var(--black));
				line-height: 1.2;
				font-size: 1.1rem;
				font-weight: 700;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 0.85em;
			}
			ul li a:hover .title {
				color: var(--accent);
			}
			ul li a:hover img {
				box-shadow: var(--box-shadow);
				opacity: 0.92;
			}
			.no-image-card {
				background: white;
				border: 1px solid rgb(var(--gray-light));
				border-radius: 10px;
				padding: 1.25em;
				height: 100%;
				box-sizing: border-box;
				transition: box-shadow 0.2s, border-color 0.2s;
			}
			ul li a:hover .no-image-card {
				box-shadow: 0 4px 16px rgba(0,0,0,0.08);
				border-color: var(--accent);
			}
			@media (max-width: 720px) {
				ul {
					gap: 1em;
				}
				ul li,
				ul li:first-child {
					width: 100%;
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.4rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="blog-header">
				<h1>Blog</h1>
				<p>Compliance guides, job management tips, and growth strategies for Australian solar & electrical installers.</p>
			</div>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage ? (
										<img
											src={post.data.heroImage}
											alt={post.data.title}
										/>
									) : (
										<div class="no-image-card">
											<p class="title">{post.data.title}</p>
											<p class="date">
												<FormattedDate date={post.data.pubDate} />
											</p>
										</div>
									)}
									{post.data.heroImage && (
										<>
											<p class="title">{post.data.title}</p>
											<p class="date">
												<FormattedDate date={post.data.pubDate} />
											</p>
										</>
									)}
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
