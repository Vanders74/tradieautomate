<style>
  .breadcrumb {
    font-size: 0.82em;
    color: rgb(var(--gray));
    margin-bottom: 1.5em;
  }
  .breadcrumb a {
    color: rgb(var(--gray));
    text-decoration: none;
  }
  .breadcrumb a:hover { color: var(--accent); }

  h1 {
    font-size: 2.2em;
    line-height: 1.2;
    margin-bottom: 0.3em;
    color: var(--navy, #1B2B4B);
  }

  .meta {
    font-size: 0.82em;
    color: rgb(var(--gray));
    margin-bottom: 1.8em;
  }

  .tldr-box {
    background: #f1f5f9;
    border-left: 5px solid var(--navy, #1B2B4B);
    border-radius: 10px;
    padding: 1.1em 1.4em;
    margin: 0 0 2em;
    font-size: 1em;
    line-height: 1.65;
    color: rgb(var(--gray-dark));
  }
  .tldr-box p { margin: 0; }

  /* Facts Table */
  .table-wrap {
    overflow-x: auto;
    margin: 0 0 2em;
    border-radius: 10px;
    border: 1px solid rgb(var(--gray-light));
  }
  table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.93em;
  }
  th[scope="row"] {
    padding: 0.7em 1.1em;
    text-align: left;
    font-weight: 700;
    width: 160px;
    background: #f8fafc;
    color: rgb(var(--black));
    border-bottom: 1px solid rgb(var(--gray-light));
    vertical-align: top;
  }
  td {
    padding: 0.7em 1.1em;
    border-bottom: 1px solid rgb(var(--gray-light));
    vertical-align: top;
    line-height: 1.5;
  }
  tr:last-child th, tr:last-child td { border-bottom: none; }

  /* Coverage list */
  .coverage-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1em;
    margin-bottom: 2em;
  }
  .coverage-list li {
    display: flex;
    gap: 1em;
    align-items: flex-start;
    background: white;
    border: 1px solid rgb(var(--gray-light));
    border-radius: 10px;
    padding: 1em 1.25em;
    line-height: 1.55;
    font-size: 0.95em;
  }
  .coverage-icon {
    font-size: 1.5em;
    flex-shrink: 0;
    margin-top: 0.05em;
  }

  /* Links */
  .links-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.6em;
    font-size: 0.95em;
  }
  .links-list li {
    padding: 0.5em 0;
    border-bottom: 1px solid rgb(var(--gray-light));
  }
  .links-list li:last-child { border-bottom: none; }

  @media (max-width: 720px) {
    h1 { font-size: 1.7em; }
    th[scope="row"] { width: 110px; }
    .coverage-list li { flex-direction: column; gap: 0.5em; }
  }
</style>
